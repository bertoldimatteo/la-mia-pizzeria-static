@{
    Pizza pizza1 = new Pizza("Pizza Margherita", "Pizza margherita classica", 10);
    Pizza pizza2 = new Pizza("Pizza Salamino", "Pizza margherita classica", 13);
    Pizza pizza3 = new Pizza("Pizza Tonno e Cipolla", "Pizza margherita classica", 14);
    Pizza pizza4 = new Pizza("Pizza Patate e Wurstel", "Pizza margherita classica", 18);

    ViewData["Title"] = "Home Page";

    ViewData["Name"] = pizza1.Name;
    ViewData["Description"] = pizza1.Description;
    ViewData["Price"] = pizza1.Price;

    ViewData["Name2"] = pizza2.Name;
    ViewData["Description2"] = pizza2.Description;
    ViewData["Price2"] = pizza2.Price;

    ViewData["Name3"] = pizza3.Name;
    ViewData["Description3"] = pizza3.Description;
    ViewData["Price3"] = pizza3.Price;

    ViewData["Name4"] = pizza4.Name;
    ViewData["Description4"] = pizza4.Description;
    ViewData["Price4"] = pizza1.Price;
}
<div class="text-center">
    <h1 class="display-4">La mia Pizzeria</h1>
    <p>test</p>
</div>

<div class="pizza-section">
    <div class="pizza">
        <h1>@ViewData["Name"]</h1>
        <p>Descrizione: @ViewData["Description"]</p>
        <img class="image" src="~/img/margherita.jpg" alt="pizza margherita"/>
        <p>Prezzo: @ViewData["Price"] €</p>
    </div>
    <div class="pizza">
        <h1>@ViewData["Name2"]</h1>
        <p>Descrizione: @ViewData["Description2"]</p>
        <img class="image" src="~/img/salamino.jpg" alt="pizza salamino" />
        <p>Prezzo: @ViewData["Price2"] €</p>
    </div>
    <div class="pizza">
        <h1>@ViewData["Name3"]</h1>
        <p>Descrizione: @ViewData["Description3"]</p>
        <img class="image" src="~/img/tonno.jpg" alt="pizza tonno" />
        <p>Prezzo: @ViewData["Price3"] €</p>
    </div>
    <div class="pizza">
        <h1>@ViewData["Name4"]</h1>
        <p>Descrizione: @ViewData["Description4"]</p>
        <img class="image" src="~/img/patate.jpg" alt="pizza patate" />
        <p>Prezzo: @ViewData["Price4"] €</p>
    </div>
</div>